<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:layout_margin="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#F9F9F9">

        <!-- Hình đại diện -->
        <ImageView
            android:id="@+id/imgShipperProfile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/avatar_default"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:padding="4dp"
            android:layout_gravity="center" />

        <!-- Thông tin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Management_ShipperId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipper ID: 12345"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/txtManagement_Shipper_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: John Doe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/txtManagementShipperEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: johndoe@email.com"
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/txtManagement_Shipper_Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +1234567890"
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/txtManagement_ShipperCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created At: 01/01/2024"
                android:textSize="14sp"
                android:textColor="#555555" />


        </LinearLayout>

        <!-- Nút bấm -->
        <Button
            android:id="@+id/btnManagement_Delete_Shipper"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Ban"
            android:background="@color/red_light"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            android:backgroundTint="#FF5722"
            android:layout_marginStart="8dp"
            android:paddingHorizontal="16dp"
            android:elevation="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
