<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addpolicy"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".screen.admin_management.AddPolicy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:paddingBottom="8dp">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Policy"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="16dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="1dp"/>
</LinearLayout>

    <!-- Form Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Policy Title Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Policy Title"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txtTitle_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter policy title"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Policy Description Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Policy Description"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txtDescription_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter policy description"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:minLines="3"
            android:gravity="top"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSavePolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="Save Policy"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>